<?xml version="1.0"?>

<layout>
    <default>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/exam_style.css</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>css/jquery.bxslider.css</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/jquery.bxslider.js</name>
                <params/>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/jquery.easing.1.3.js</name>
                <params/>
            </action>
        </reference>

    </default>
    <cms_index_index>
        <remove name="right"/>
        <remove name="messages"/>
        <remove name="global_messages"/>
        <remove name="footer"/>
        <reference name="content">
            <block type="magecom_exam/slider" name="slider" as="content" template="magecom/slider.phtml" />
        </reference>
    </cms_index_index>

</layout>
